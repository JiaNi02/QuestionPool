@page
@model QuestionPool.Pages.subject.Choose_SubjectModel
@{
    string layout = "_Layout";
    if (User.IsInRole("Admin"))
    {
        layout = "_LayoutForAdmin";
    }
    Layout = layout;
}
<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Question Bank</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Select Subject</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <h2></h2>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card">
                        <div class="card-header bg-primary py-3 text-white">
                            <h5 class="card-title mb-0 text-center">Select Subject</h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="mb-3">
                                    <label for="choosedSubject" class="form-label">Select Subject:</label>
                                    <select name="selectedSubjectId" id="choosedSubject" class="form-select">
                                        <option value="">All Subjects</option>
                                        @foreach (var subject in Model.Subjects)
                                        {
                                            <option value="@subject.Id">@subject.Name</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Next</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container -->

</div> <!-- content -->
<!-- Vendor js -->
<script src="~/assets/js/vendor.min.js"></script>


