            var loadFile = function (event) {
                var image = document.getElementById('output');
                image.src = URL.createObjectURL(event.target.files[0]);
            };

                document.addEventListener("DOMContentLoaded", function () {
                    var addButton = document.getElementById("addChoice");
                    var container = document.getElementById("choiceContainer");
                    var index = 2; // 初始选择索引

                    addButton.addEventListener("click", function () {
                        var newDiv = document.createElement("div");
                        newDiv.className = "mb-3";
                        newDiv.innerHTML = `
                                <label class="control-label">Choice ${index}:</label>
                                <input type="text" class="form-control" name="Choice${index}" />
