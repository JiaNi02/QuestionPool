@page
@model QuestionPool.Pages.answer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>QuestionAnswer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionAnswer.Id" />
            <div class="form-group">
                <label asp-for="QuestionAnswer.Answer" class="control-label"></label>
                <input asp-for="QuestionAnswer.Answer" class="form-control" />
                <span asp-validation-for="QuestionAnswer.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAnswer.QuestionId" class="control-label"></label>
                <select asp-for="QuestionAnswer.QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                <span asp-validation-for="QuestionAnswer.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAnswer.Choice" class="control-label"></label>
                <input asp-for="QuestionAnswer.Choice" class="form-control" />
                <span asp-validation-for="QuestionAnswer.Choice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAnswer.Order" class="control-label"></label>
                <input asp-for="QuestionAnswer.Order" class="form-control" />
                <span asp-validation-for="QuestionAnswer.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAnswer.Image" class="control-label"></label>
                <input asp-for="QuestionAnswer.Image" class="form-control" />
                <span asp-validation-for="QuestionAnswer.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionAnswer.IsTheAnswer" class="control-label"></label>
                <input asp-for="QuestionAnswer.IsTheAnswer" class="form-control" />
                <span asp-validation-for="QuestionAnswer.IsTheAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
