<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">ExamQuestionPool</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Question Bank</a></li>

                            </ol>
                        </div>
                        <h4 class="page-title">Question Bank</h4>
                    </div>
                </div>
            </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                        <form id="sortingForm" method="post" asp-page-handler="Submit">
                         @*  <button type="button" id="demo-delete-row" class="btn btn-danger btn-sm" disabled><i class="mdi mdi-close me-1"></i>Delete</button> *@
                          <table id="demo-custom-toolbar" class="table-border" data-toggle="table" data-toolbar="#demo-delete-row" data-search="true"
                           data-show-refresh="true" data-show-columns="true" data-sort-name="id" data-page-list="[10, 20, 30]"
                           data-page-size="10" data-pagination="true" data-show-pagination-switch="true">
                        <thead class="table-light">
                            <tr>

                                <th><input type="checkbox" id="selectAll"/></th>
                                <th data-field="questionnumber" data-sortable="true">No.</th>
                                <th data-field="name" data-sortable="true">Name</th>
                                <th data-field="text" data-sortable="true" data-formatter="dateFormatter">Question</th>
                                <th data-field="amount" data-sortable="true">Chioce</th>
                                <th data-field="status" data-align="center" data-sortable="true">Mark</th>
                                <th data-field="type" data-sortable="true">ExamType</th>
                                <th data-sortable="true" data-align="center">Answer</th>

                            </tr>
                        </thead>
                        <tbody>
                                    @foreach (var item in Model.Questions)
                                    {
                                        <tr>
                                            <td><input type="checkbox" class="selectedQuestion" name="SelectedQuestions" value="@item.Id" /></td>
                                            <td class="questionnumber"> @Html.DisplayFor(modelItem => item.QuestionNumber)</td>
                                            <td class="name">@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td class="question">@Html.Raw(item.Questions)</td>
                                            <td class="choice">@Html.DisplayFor(modelItem => item.Choice)</td>
                                            <td class ="mark">@Html.DisplayFor(modelItem => item.Mark)</td>
                                            <td class="type">@Html.DisplayFor(modelItem => item.ExamType.Name)</td>
                                            <td class="answer">
                                                @if (item.QuestionAnswer.Any())
                                                {
                                                    <ul>
                                                        @foreach (var answer in item.QuestionAnswer)
                                                        {
                                                                @Html.Raw($"<li>{answer.Answer}</li>")
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <p>No answers available</p>
                                                }
                                            </td>
                                        </tr>
                                    }
                        </tbody>
                    </table>
                                <input type="hidden" name="selectedQuestions" id="selectedQuestionsInput" />
                                <div style="text-align: center;">
                                    <button type="button" id="submitButton" class="btn btn-outline-success waves-effect waves-light" style="width:250px">
                                        Submit Selected Questions
                                    </button>
                                    <a href="~/subject/Choose Subject" class="btn btn-outline-secondary waves-effect waves-light" style="width:150px">Return Back</a>
                                </div>
                            </form>
                </div>
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->


    </div> <!-- container -->
    </div> <!-- content --> 

</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // 获取删除按钮元素
        var deleteButton = document.getElementById("demo-delete-row");

        // 添加点击事件监听器
        deleteButton.addEventListener("click", function () {
            // 弹出警告框
            var confirmation = confirm("Are you sure you want to delete this row?");

            // 如果用户点击了确认按钮
            if (confirmation) {
                // 获取所有选中的复选框
                var selectedCheckboxes = document.querySelectorAll(".selectedQuestion:checked");

                // 遍历选中的复选框
                selectedCheckboxes.forEach(function (checkbox) {
                    // 获取复选框所在的行并将其删除
                    var row = checkbox.closest("tr");
                    row.remove();
                });
            }
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        var selectedQuestions = JSON.parse(localStorage.getItem("selectedQuestions")) || {};

        var checkboxes = document.querySelectorAll(".selectedQuestion");

        checkboxes.forEach(function (checkbox) {
            var questionId = checkbox.value;
            checkbox.checked = selectedQuestions[questionId] || false;

            checkbox.addEventListener("change", function () {
                if (checkbox.checked) {
                    selectedQuestions[questionId] = true;
                } else {
                    delete selectedQuestions[questionId];
                }

                localStorage.setItem("selectedQuestions", JSON.stringify(selectedQuestions));
            });
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        var selectAllCheckbox = document.getElementById("selectAll");
        var checkboxes = document.querySelectorAll(".selectedQuestion");

        selectAllCheckbox.addEventListener("click", function () {
            checkboxes.forEach(function (checkbox) {
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });

   

    document.getElementById('submitButton').addEventListener('click', function () {
        var selectedData = [];
        var checkboxes = document.querySelectorAll('.selectedQuestion:checked');

        checkboxes.forEach(function (checkbox) {
            var rowData = {};
            var row = checkbox.closest('tr');
            rowData['id'] = checkbox.value;
            rowData['questionnumber'] = row.querySelector('.questionnumber').textContent.trim();
            rowData['name'] = row.querySelector('.name').textContent.trim();
            rowData['question'] = row.querySelector('.question').textContent.trim();
            rowData['choice'] = row.querySelector('.choice').textContent.trim();
            rowData['mark'] = row.querySelector('.mark').textContent.trim();
            rowData['type'] = row.querySelector('.type').textContent.trim();
            rowData['answer'] = row.querySelector('.answer').textContent.trim();
            selectedData.push(rowData);
        });

        var selectedQuestions = selectedData.map(function (data) {
            return data.id;
        });

        // 构建下一个页面的URL
        var url;
        // 检查第一个选中的问题的考试类型
        var firstQuestionType = selectedData.length > 0 ? selectedData[0].type : '';
        if (firstQuestionType === 'Objective Question') {
            url = '/question/DisplayQuestion?selectedQuestions=' + encodeURIComponent(selectedQuestions.join(','));
        } else if (firstQuestionType === 'Subjective Question') {
            url = '/question/DisplaySubjectiveQuestion?selectedQuestions=' + encodeURIComponent(selectedQuestions.join(','));
        } else {
            // 如果无法确定考试类型，默认导航回题库页面
            url = '/subject/ChooseSubject';
        }

        // 重定向到相应的页面
        window.location.href = url;
    });


</script>
