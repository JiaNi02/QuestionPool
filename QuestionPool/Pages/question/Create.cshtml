            };
            tinymce.init({
                selector: '#default',
                plugins: 'autolink  visualblocks visualchars image link media  table charmap pagebreak nonbreaking anchor insertdatetime advlist lists  wordcount  help  charmap linkchecker',
                toolbar: 'undo redo spellcheckdialog formatpainter | fontfamily fontsize | bold italic underline forecolor backcolor | link image | alignleft aligncenter alignright alignjustify lineheight | checklist bullist numlist indent outdent | removeformat',
                height: '300px'
                
            });

        </script>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            <script>
                var choices = [];

                // Add choice function
                function AddChoice() {
                    if (choices.length >=4) {
                        alert("You have reached the maximum number of choices (4).");
                        return;
                    }

                    var newDiv = document.createElement("div");
                    newDiv.className = "mb-3 choiceFieldGroup";
                    var index = choices.length;
                    newDiv.innerHTML = `
                    <label class="control-label">Choice ${index + 1}:</label>
                    <input type="text" class="form-control choiceInput" name="Choice${index + 1}" value="" /> <!-- 设置默认值为空字符串 -->
                        <button type="button" class="btn btn-danger deleteChoice">Delete</button>
                        <span class="text-danger"></span>
                    `;
                    document.getElementById("choiceContainer").appendChild(newDiv);
                    choices.push(""); // 添加一个空的选择项
                    UpdateChoiceField(); // 更新隐藏字段
                }

                // Delete choice function
                function DeleteChoice(event) {
                    event.target.parentElement.remove();
                    UpdateChoiceField();
                }

                // Update hidden field with choices as JSON
                function UpdateChoiceField() {
                    var choiceInputs = document.querySelectorAll(".choiceInput");
                    choices = [];
                    choiceInputs.forEach(function (input) {
                        choices.push(input.value); // Push current value, ensuring capture of all inputs
                    });
                    document.getElementById("Choice").value = JSON.stringify(choices);
                }

                // Event listeners
                document.getElementById("addChoice").addEventListener("click", function () {
                    AddChoice();
                });

                document.addEventListener("click", function (event) {
                    if (event.target.classList.contains("deleteChoice")) {
                        DeleteChoice(event);
                    }
                });
                document.getElementById("choiceContainer").addEventListener("input", function (event) {
                    if (event.target.classList.contains("choiceInput")) {
                        UpdateChoiceField();
                    }
                });
                // Initialize choices display on page load
                window.onload = function () {
                    UpdateChoiceField();
                };
               
            </script>
        }
