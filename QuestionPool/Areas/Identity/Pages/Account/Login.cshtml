@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}
<head>
    <meta charset="utf-8" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Theme Config Js -->
    <script src="~/assets/js/head.js"></script>

    <!-- Bootstrap css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- App css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    <!-- Icons css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    @*     <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> *@
</head>

<body class="authentication-bg " style="background-color:#38414a">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="text-center w-75 m-auto">
                                <div class="auth-brand">
                                    <a href="index.html" class="logo logo-dark text-center">
                                        <span class="logo-lg">
                                            <img src="~/images/woodlands.png" alt="" height="90">
                                        </span>
                                    </a>
                                </div>
                                <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                            </div>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email address</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    @*                                    <label for="emailaddress" class="form-label">Email address</label>
                                    <input class="form-control" type="email" id="emailaddress" required="" placeholder="Enter your email">*@
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                                        <div class="input-group-text" data-password-toggle="true">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>

                                <div class="text-center d-grid">
                                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                                    <a href="~/Page/Index"></a>
                                </div>

                            </form>


                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p> <a id="forgot-password" asp-page="./ForgotPassword" class="text-white-50">Forgot your password?</a></p>
                            <p class="text-white-50">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><b />Register as a new user<b /></a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white-50">Resend email confirmation</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            // Toggle password visibility
            $('[data-password-toggle]').on('click', function () {
                var passwordInput = $(this).closest('.input-group').find('input');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                } else {
                    passwordInput.attr('type', 'password');
                }
            });
        });
    </script>

</body>

<style>
    .body {
        background-color: #38414a;
    }
</style>
