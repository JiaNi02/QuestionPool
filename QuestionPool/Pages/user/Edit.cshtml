@model QuestionPool.Pages.user.EditModel

@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta charset="utf-8" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Theme Config Js -->
    <script src="~/assets/js/head.js"></script>
    <!-- Bootstrap Tables css -->
    <link href="~/assets/libs/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" type="text/css" />


    <!-- Bootstrap css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- App css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    <!-- Icons css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>
<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">ExamQuestionPool</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Manage User</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Edit</a></li>
                        </ol>
                    </div>
                    <h4 class="page-title">Edit User Information</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        @* Create start*@
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card">
                    <div class="card-body">

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserDetails.Id" />
                            <div class="mb-3">
                                <label asp-for="UserDetails.Name" class="control-label"></label>
                                <input asp-for="UserDetails.Name" class="form-control" />
                                <span asp-validation-for="UserDetails.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UserDetails.Department.Name" class="control-label"></label>
                                <select asp-for="UserDetails.Department.Name" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                                <span asp-validation-for="UserDetails.DepartmentId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserDetails.Status" class="control-label"></label>
                                <select asp-for="UserDetails.Status" class="form-control mb-3">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                                <span asp-validation-for="UserDetails.Status" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="text-align: center;">
                                <button type="submit" class="btn w-sm btn-success waves-effect" style="margin-right:15px">Create</button>
                                <a asp-page="Index" class="btn btn-blue waves-effect waves-light">Back to List</a>
                            </div>

                        </form>

                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }



    </div> <!-- container -->

</div> <!-- content -->
<!-- Vendor js -->
<script src="~/assets/js/vendor.min.js"></script>
