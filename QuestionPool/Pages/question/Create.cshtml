                                <span asp-validation-for="Question.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Question.Questions" class="form-label"></label>
                                 <input asp-for="Question.Questions" class="form-control" />
                                <span asp-validation-for="Question.Questions" class="text-danger"></span>

                            </div>                               
                            <div class="mb-3">
                                <label asp-for="Question.Mark" class="form-label"></label>
                                <input asp-for="Question.Mark" class="form-control" />
                                <span asp-validation-for="Question.Mark" class="text-danger"></span>
                            </div>
                                <div class="mb-3">
                                    <label for="example-fileinput" class="form-label">Upload File</label>
                                    <input asp-for="Question.Image" class="form-control" type="file" accept="image/*" name="image" id="file" onchange="loadFile(event)">
                                    <span asp-validation-for="Question.Image" class="text-danger"></span>
                                    <p><img id="output" width="150" /></p>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Question.ExamTypeId" class="control-label"></label>
                                    <select asp-for="Question.ExamTypeId" class="form-control" asp-items="ViewBag.ExamTypeId"></select>
                                </div>

                        </div>

                        <div class="col-lg-6">
                            <!-- Content for the right side  -->
                            <div class="mb-3">
                                <label asp-for="Question.SubjectId" class="control-label">Subject</label>
                                <select asp-for="Question.SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                            </div>
                            <div class="mb-3">
                                    <label asp-for="Question.TermId" class="control-label">Term</label>
                                <select asp-for="Question.TermId" class="form-control" asp-items="ViewBag.TermId"></select>
                            </div>
                                <div id="choiceContainer">
                                    <div class="mb-3" id="choiceFieldGroup" style="display: none;">
                                        <label asp-for="Question.Choice" class="control-label">Choices</label>
                                        <input asp-for="Question.Choice" class="form-control" />
                                        <span asp-validation-for="Question.Choice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div id="dropdownSection" class="mb-3">
                                    <select id="dropdownChoice" class="form-control">
                                        <option value="">Please select an option</option>
                                        <option value="show">Show Choice Field</option>
                                        <option value="hide">Hide Choice Field</option>
                                    </select>
                                </div>
                                <button type="button" id="addChoice" class="btn btn-primary">Add Choice</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-12">
                    <div class="text-center mb-3">
                        <button type="submit"  class="btn btn-primary">Create</button>
                        <a asp-page="Index" class="btn btn-blue waves-effect waves-light">Back to List</a>
                        <a href="~/answer/Create" class="btn btn-info waves-effect waves-light">Create Answer</a>
                    </div>
                </div> <!-- end col -->
            </div>
            </form>

            <!-- end row -->          
        </div> <!-- container -->
        <script>
            var loadFile = function (event) {
                var image = document.getElementById('output');
                image.src = URL.createObjectURL(event.target.files[0]);
            };
            document.addEventListener("DOMContentLoaded", function () {
                var addButton = document.getElementById("addChoice");
                var container = document.getElementById("choiceContainer");
                var index = 2;
                var maxChoices = 4;// 初始选择索引

                addButton.addEventListener("click", function () {
                    var newDiv = document.createElement("div");
                    newDiv.className = "mb-3";
                    newDiv.innerHTML = `
                                            <label class="control-label">Choice ${index}:</label>
                                            <input type="text" class="form-control" name="Choice${index}" />
                                            <span class="text-danger"></span>
                                        `;
                    container.appendChild(newDiv);
                    index++;
                });
            });
        </script>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    // Get the select element for dropdown choice
                    var dropdownChoice = document.getElementById("dropdownChoice");
                    // Get the choice field group
                    var choiceFieldGroup = document.getElementById("choiceFieldGroup");

                    // Event listener for change event on dropdown choice
                    dropdownChoice.addEventListener("change", function () {
                        // Get the selected value
                        var selectedOption = this.value;

                        // Conditionally display or hide the choice field group
                        if (selectedOption === "show") {
                            // Show the choice field group
                            choiceFieldGroup.style.display = "block";
                        } else {
                            // Hide the choice field group
                            choiceFieldGroup.style.display = "none";
                        }
                    });
                });
            </script>
        }
    </div> <!-- content -->
    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>

    <!-- Select2 js-->
    <script src="~/assets/libs/select2/js/select2.min.js"></script>
